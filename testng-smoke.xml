<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke Suite" parallel="tests" thread-count="3">

    <listeners>
        <listener class-name="com.framework.listeners.ExtentReportListener"/>
        <listener class-name="com.framework.listeners.TestListener"/>
        <listener class-name="com.framework.listeners.RetryTransformer"/>
    </listeners>

    <test name="E-Shop Smoke">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.framework.eshop.LoginPageTest"/>
            <class name="com.framework.eshop.OrderPageTest"/>
            <class name="com.framework.eshop.ShoppingPageTest"/>
        </classes>
    </test>

    <test name="SKBank Smoke">
        <packages>
            <package name="com.framework.skbank"/>
        </packages>
    </test>

</suite>
